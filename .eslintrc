{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "L": true,
    "config": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [ "babel", "react" ],
  "extends": [
    "vizzuality"
  ],
  "rules": {
    "object-curly-spacing": ["error", "always"],

    "react/no-danger": 1,
    "react/jsx-space-before-closing": ["error", "always"],
    "react/forbid-component-props": 0,
    "react/jsx-closing-bracket-location": [1, "tag-aligned"]
  }
}
